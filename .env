// .env (with security annotations)
# === DATABASE CONFIGURATION ===
MONGODB_URI=mongodb://localhost:27017/enterprise_blog
MONGODB_REPLICA_SET=rs0  # For production replication
MONGODB_READ_PREFERENCE=secondaryPreferred  # Read from secondary
MONGODB_MAX_POOL_SIZE=100  # Connection pool size
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_CONNECT_TIMEOUT_MS=10000

# === DATABASE PERFORMANCE ===
MONGODB_WRITE_CONCERN=1  # 1: acknowledged, majority: replicated
MONGODB_JOURNAL=true  # Journaling for durability
MONGODB_READ_CONCERN=local  # local|majority|linearizable

# === SECURITY ===
MONGODB_TLS=true  # Enable TLS in production
MONGODB_SSL_VALIDATE=true  # Validate SSL certificates
MONGODB_AUTH_SOURCE=admin  # Authentication database

# === MONITORING ===
MONGODB_QUERY_TIMEOUT=10000  # Query timeout in ms
MONGODB_OPERATION_TIMEOUT=30000  # Operation timeout
MONGODB_SLOW_QUERY_THRESHOLD=100  // Log queries >100ms
